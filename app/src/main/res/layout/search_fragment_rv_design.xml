<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userProfileSearchPageImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/add_profile_place_holder"
        app:civ_border_color="@color/purple_200"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userNameSearchPageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Vamsi Krishna"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/userProfessionSearchPageTextView"
        app:layout_constraintStart_toEndOf="@+id/userProfileSearchPageImageView"
        app:layout_constraintTop_toTopOf="@+id/userProfileSearchPageImageView"
        app:layout_constraintVertical_chainStyle="packed" />

    <TextView
        android:id="@+id/userProfessionSearchPageTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="student"
        app:layout_constraintBottom_toBottomOf="@id/userProfileSearchPageImageView"
        app:layout_constraintStart_toStartOf="@id/userNameSearchPageTextView"
        app:layout_constraintTop_toBottomOf="@id/userNameSearchPageTextView" />

    <Button
        android:id="@+id/followButtonSearchPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Follow"
        app:layout_constraintBottom_toBottomOf="@+id/userProfileSearchPageImageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/userProfileSearchPageImageView" />

</androidx.constraintlayout.widget.ConstraintLayout>