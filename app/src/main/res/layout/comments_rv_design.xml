<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/commentedUserProfileImageView"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/add_profile_place_holder"
        app:civ_border_color="@color/purple_200"
        app:civ_border_width="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/commentedUserNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="Vamsi Krishna"
        android:alpha="0.8"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/commentedUserProfileImageView"
        app:layout_constraintTop_toTopOf="@+id/commentedUserProfileImageView"/>

    <TextView
        android:id="@+id/timeOfComment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="8h"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/commentedUserNameTextView"
        app:layout_constraintTop_toTopOf="@+id/commentedUserNameTextView"/>

    <TextView
        android:id="@+id/commentBodyTextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Awesome"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/commentedUserNameTextView"
        app:layout_constraintTop_toBottomOf="@+id/commentedUserNameTextView"/>


</androidx.constraintlayout.widget.ConstraintLayout>